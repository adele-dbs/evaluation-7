{% extends 'base.html.twig' %}

{% block title %}Application index{% endblock %}

{% block body %}
    <h1>Application index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Applicant_id</th>
                <th>Id_job_advert</th>
                <th>Validation_id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for application in applications %}
            <tr>
                <td>{{ application.id }}</td>
                <td>{{ application.applicantId }}</td>
                <td>{{ application.idJobAdvert }}</td>
                <td>{{ application.validationId }}</td>
                <td>
                    <a href="{{ path('app_applicant_interface_show', {'id': application.id}) }}">show</a>
                    <a href="{{ path('app_applicant_interface_edit', {'id': application.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_applicant_interface_new') }}">Create new</a>
{% endblock %}
