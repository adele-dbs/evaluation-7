{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
    <h1>Créer un compte</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {'attr': {'id': 'new_edit_utilisateur'}}) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }, {'attr': {'id': 'user_password'}}) }}
        <div class="col-12">
            <label for="verifpass">Saisir une seconde fois le mot de passe</label>
            <input type="password" id="verifpass" required>
        </div>
        {{ form_row(registrationForm.roles) }}
        <button type="submit" class="btn btn-lg btn-primary">{{ button_label|default('Sauvegarder') }}</button>
    {{ form_end(registrationForm) }}
{% endblock %}
